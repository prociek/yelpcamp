<%- include('./partials/header') %>

<div class="row justify-content-center">
    <div class="col-4 ">
        <h1 class="text-center">Register</h1>
        <div>
            <form class="form-group" action="/register" method="POST">
                <input class="form-control mb-3" type="text" name="username" placeholder="Username">
                <input class="form-control mb-3" type="password" name="password" placeholder="Password">
                <input class="form-control mb-3" type="text" name="lastName" placeholder="Last Name">
                <input class="form-control mb-3" type="email" name="email" placeholder="Email">
                <input class="form-control mb-3" type="text" name="avatar" placeholder="Avatar URL">
                <input class="form-control mb-3" type="text" name="adminCode" placeholder="Admin code">
                <button class="form-control btn btn-primary btn-lg">Sign up</button>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>