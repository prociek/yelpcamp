<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the World</p>
        <a href="/campgrounds/new" class="btn btn-lg btn-primary">Create new campground</a>
    </header>
    <div style="text-align: center;" class="row">
    <% campgrounds.forEach(function(camp){ %>

        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="img-thumbnail">
                <img style="width: 100%; margin-bottom: 6px;" src="<%= camp.image %>">
                <div class="caption">
                    <h4><%= camp.name %></h4>
                </div>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">Details</a>
            </div>
        </div>
    
    <% }) %>
    </div>
</div>
   
<%- include('../partials/footer') %>