<%- include('../partials/header') %>

<header class="jumbotron text-center">
    <h1>Welcome to YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the World</p>
    <a href="/campgrounds/new" class="btn btn-lg btn-primary">Create new campground</a>
</header>
<div class="row text-center">
<% campgrounds.forEach(function(camp){ %>

    <div class="col-xl-3 col-lg-4 col-md-6">
        <div class="img-thumbnail h-100 d-flex flex-column justify-content-between align-items-center">
            <a href="/campgrounds/<%= camp._id %>">
                <img style="width: 100%; margin-bottom: 6px;" src="<%= camp.image %>">
            </a>
            <div class="caption">
                <h4 class="h5"><%= camp.name %></h4>
            </div>
            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">Details</a>
        </div>
    </div>

<% }) %>
</div>
   
<%- include('../partials/footer') %>