<%- include('../partials/header') %>

<div class="row align-content-center text-center flex-column align-items-center">
    <h1 class="mb-4">Create new campground</h1>
    <div class="col-8 col-md-5 col-xl-4">
        <div class="form-group">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <input class="form-control mb-3" type="text" name="name" placeholder="Enter a name" required>
                <label for="image-file" class="file-upload form-control mb-3">Choose file</label>
                <input class="form-control mb-3" type="file" id="image-file" name="image" accept="image/*" required>
                <input class="form-control mb-3" type="number" step="0.01" min="0.01" name="price" placeholder="Enter a price">
                <input class="form-control mb-3" type="text" name="description" placeholder="Enter a description">
                <button class="form-control mb-2 btn btn-primary btn-lg" type="submit">Create</button class="form-control">
            </form>
            <div style="text-align: left;">
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>