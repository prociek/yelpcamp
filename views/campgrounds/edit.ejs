<%- include('../partials/header') %>

<div class="row align-content-center text-center flex-column align-items-center">
    <h1 class="mb-4">Edit: <%= campground.name %></h1>
    <div class="col-8 col-md-5 col-xl-4" >
        <div class="form-group">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <input class="form-control mb-3" type="text" name="campground[name]" value="<%= campground.name %>">
                <input class="form-control mb-3 " type="file" id="image" name="image" accept="image/*">
                <input class="form-control mb-3" type="number" step="0.01" min="0.01" name="campground[price]" value="<%= campground.price %>">
                <input class="form-control mb-3" type="text" name="campground[description]" value="<%= campground.description %>">
                <button class="form-control mb-2 btn btn-primary btn-lg" type="submit">Save</button class="form-control">
                </form>
                <div style="text-align: left;">
                    <a href="/campgrounds">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>    
<%- include('../partials/footer') %>