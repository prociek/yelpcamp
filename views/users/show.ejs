<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-4">
        <h4><%= user.username %> <%= user.lastName %></h4>
        <img class="img-thumbnail" src="<%= user.avatar %>" alt="avatar">
        <caption><em><a href="mailto:"><%= user.email %></a></em></caption>
    </div>
    <div class="col-md-8">
        <ul class="list-group mt-md-4"></ul>
        <% campgrounds.forEach(function(campground){ %>
                <li class="list-group-item"><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
            <% }); %>
        </ul>
    </div>
</div>

<%- include('../partials/footer') %>